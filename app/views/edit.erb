<h1>Edit an article</h1>

<form action="/articles/<%= @article.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Title: <input type="text" name="article[title]" id="title" value=<%= @article.title%>></p>
  <p>Content: <input type="text" name="article[content]" id="content" value=<%= @article.content%>></p>
  <p><button type="submit" value="submit">Edit</button></p>
</form>
